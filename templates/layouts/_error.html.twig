{% extends 'base.html.twig' %}

{% block title %}Erreur {{exception.statusCode}}
{% endblock %}

{% block body %}

	<div class="d-flex align-items-center justify-content-center vh-100">
		<div class="text-center">
			<h1 class="display-1 fw-bold">HTTP Error
				{{exception.statusCode}}</h1>


			<p class="fs-3">
				<span class="text-danger">Opps!</span>
				Page non trouvée.</p>

			

			<p class="lead">
				La page que vous recherchez n’existe pas.
			</p>
			<a href="/" class="btn btn-primary">Retourner à l'accueil
			</a>
		</div>
	</div>

{% endblock %}
